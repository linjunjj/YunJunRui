<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.linjun.yunjunrui"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_backgorund"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:fitsSystemWindows="true"
        app:popupTheme="@style/AppTheme.Base"
        app:layout_scrollFlags="scroll|enterAlways"
        tools:targetApi="lollipop" >
        <TextView
           android:text="发现"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/textColor1"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dis_logo"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/logo"
            android:layout_width="40dp"
            android:layout_height="40dp" />
         <TextView
             android:layout_marginLeft="10dp"
             android:layout_centerVertical="true"
             android:gravity="center"
             android:textStyle="bold"
             android:layout_toRightOf="@+id/dis_logo"
       android:text="深圳市云君瑞科技有限公司"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.zhouwei.mzbanner.MZBannerView
        android:background="@color/white"
        android:id="@+id/banner"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="4dp"
        app:open_mz_mode="true"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:indicatorPaddingLeft="10dp"
        />

    <RelativeLayout
        android:id="@+id/r_lanSan"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_press">

        <ImageView
            android:id="@+id/lan"
            android:layout_margin="5dp"
            android:src="@mipmap/lan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/lan"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:gravity="center_vertical"
        android:text="局域网扫描"
        android:textSize="20sp"
        android:textColor="#424242"/>
    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/right"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        android:background="@color/main_backgorund"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lodo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/coupon" />

        <TextView
            android:id="@+id/huod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/lodo"
            android:text="优惠活动"
            android:textColor="#49449"
            android:textSize="15sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:text="详情"
            android:textColor="@color/button_sure"
            android:textSize="15sp" />

    </RelativeLayout>

    <View
        android:background="#BEBEBE"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gaogao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机搭配66666"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="￥997特惠"
                android:textColor="@color/tbreak"
                android:textSize="9sp" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#BEBEBE"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gaoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机搭配66666"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="￥997特惠"
                android:textColor="@color/tbreak"
                android:textSize="9sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:background="#BEBEBE"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>


</LinearLayout>
